		default:
			return 0;
			break;
	}
}

static void write_message(int x, int y, char message[], int color){
	int taille_mess = strlen(message);
	int i = 0, offset = 0;
	for(i = 0; i < taille_mess ; i++){
		offset += write_letter(x + offset, y, message[i], color);
	}
}
